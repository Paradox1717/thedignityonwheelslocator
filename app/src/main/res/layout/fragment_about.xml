<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="2708dp"
                android:layout_marginTop="385dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:paddingTop="5dp"
                android:textSize="16sp"
                android:text="@string/aboutinfo"
                android:textColor="@color/fakeColorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contactinfo"
                android:textColor="@color/fakeColorPrimaryDark"
                android:textSize="16sp"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                app:srcCompat="@drawable/truck"/>

            <View
                android:layout_height="2dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="315dp"
                android:background="#c0c0c0"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="780dp"
                android:background="#c0c0c0"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="383dp"
                android:background="#c0c0c0"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="60dp"
                android:text="Shower Truck"
                android:textColor="@color/fakeColorPrimaryDark"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="15dp"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>